# ── Server ───────────────────────────────────
NODE_ENV=production
PORT=3001

# ── Database ─────────────────────────────────
DATABASE_URL=postgresql://delegacje:CHANGE_ME@localhost:5432/delegacje_db

# ── Auth ─────────────────────────────────────
# Generuj: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_48_CHARS_MIN
JWT_EXPIRES_IN=7d

# ── Encryption (dla danych wrażliwych) ────────
# Generuj: openssl rand -base64 32 (wymagane dokładnie 32 bajty base64)
ENCRYPTION_KEY=CHANGE_ME_32_BYTES

# ── CORS ─────────────────────────────────────
CORS_ORIGIN=https://yourdomain.com

# ── AI / OCR (opcjonalne) ─────────────────────
# Wybierz: none | gemini | openai
AI_PROVIDER=none
GEMINI_API_KEY=
OPENAI_API_KEY=

# ── Pliki ────────────────────────────────────
UPLOAD_DIR=./uploads
LOG_DIR=./logs
MAX_FILE_SIZE=52428800
